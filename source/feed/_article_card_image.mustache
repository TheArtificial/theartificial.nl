<div class="col-4 packed">
  <a href="{{url}}">
    <div class="card blog-preview {{category}}">
      <div class="masthead">
        <img src="{{image}}">
      </div>
      <div class="meta center">
        <div class="label">{{category}}</div>
        <div class="small-title">{{{title}}}</div>
        <div class="small-body author">{{author}}</div>
        <div class="small-body date">{{date}}</div>
      </div>
    </div>
  </a>
</div>
