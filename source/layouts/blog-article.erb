<% wrap_layout :layout do %>

<style>
  #masthead {
    overflow: hidden;
    height: 320px;
    width: 100%;
    background: url('<%= "#{current_page.url[/.*(?=\..+$)/]}/-masthead.png" %>') no-repeat center center;
    background-size: cover;
  }
</style>

<div id="blog-article">
  <div class="titlespace" id="masthead">
    <div class="overlay">
      <div class="about">
        <h1><%= current_page.title %></h1>
        <div class="author"><%= link_to sitemap.find_resource_by_path("/people/#{current_page.data.author}.html").data.title,  "/people/#{current_page.data.author}.html", class: 'author', rel: 'author' %></div>
        <div class="date"><time datetime="<%= current_page.date.strftime('%Y-%m-%d') %>"><%= current_page.date.strftime('%B %e, 0%Y') %></time></div>
      </div>
    </div>
  </div>
  
  <div class="pale">
    <article>      
      <%= yield %>
    </article>
  </div>
</div>
    
<% end %>
