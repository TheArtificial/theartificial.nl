<% wrap_layout :multiple_layout do %>
    

<section class="content">
	<div class="bleed turquoise">
		<div class="flexcontainer">
			<div class="col-4">
				<div class="padded">
					<h1>LOGO</h1>
				</div>
			</div>
			
			<div class="col-8">
				<div class="padded">
					<h1><%= current_page.data.title %></h1>
					<h5><a href="https://linkedin.com/in/<%= current_page.data.linkedin %>">linkedin</a> | <a href="https://twitter.com/<%= current_page.data.twitter %>">twitter</a></h5>
					<h3><%= "&ldquo;#{current_page.data['quote']}&rdquo;" %></h3>
					<%= yield %>
					<h4>Logo Story</h4>
					<p><%= Tilt['markdown'].new {current_page.data['logo-story']}.render %></p>
				</div>
			</div>
		</div>
	</div>
	
	<div class="container packery">
		<% articles = blog.articles.select {|a| (a.data.author == current_page.path.split('/').last.gsub(/.html$/, '')) and (a.data.category != 'links') } %>
			<% if articles.length > 0 %>
	    	<% articles.take(3).each do |article, i| %>
		<div class="col-4 packed">
			<div class="card center">
				<div class="padded">
					<h2><%= link_to article.title, article %></h2>
					<%= article.summary(180, 'â€¦') %>
				</div>
      </div>
    </div>
    		<% end %>
    	<% else %>
    		
      <% end %>
</div>

</section>    
<% end %>
