<% wrap_layout :layout do %>
    
<style>

  #masthead {
    overflow: hidden;
    height: 320px;
    width: 100%;
    background: url('../images/people-<%= current_page.data.id %>-masthead.png') no-repeat center center;
    background-size: cover;
  }

    #headshot {
        background:url('../images/people-<%= current_page.data.id %>-1.png') no-repeat center center;
        background-size: 600px 400px;
    }

    #secondary {
        background:url('../images/people-<%= current_page.data.id %>-2.png') no-repeat center center;
        background-size: 600px 400px;
    }

    .links {
      margin: -40px 0 35px;
    }

    .summary{
        font-size: .9em;
        line-height: 1.4em;
        margin-top: -3px;
    }

</style>

  <div id="masthead">
  </div>

<div id="story">
  <div class="pale"> 

    <div class="row">
      <div class="image right" id="headshot"></div>
      <div class="copy right">
        <p class="gigantic condensed text-grey"><%= current_page.data.title %></p>
        <p class="links small"><a href="https://linkedin.com/in/<%= current_page.data.linkedin %>" target="blank">linkedin</a>  |  <a href="https://twitter.com/<%= current_page.data.linkedin %>" target="blank">twitter</a></p>
        <p class="small"><%= yield %></p>
      </div>
    </div>

    <div class="row">
      <div class="image left" id="secondary"></div>
      <div class="copy bg-grey left">
        <% articles = blog.articles.select {|a| (a.data.author == current_page.path.split('/').last.gsub(/.html$/, '')) and (a.data.category != 'links') } %>
        <% if articles.length > 0 %>
          <p class="gigantic condensed">Recent posts</p>
          <% articles.take(3).each do |article, i| %>
            <h4>
              <%= link_to article.title, article %>
            </h4>
            <p class="summary">
              <%= article.summary(180, 'â€¦') %>
            </p>
          <% end %>
        <% else %>
          <%= current_page.data.title %> hasn't posted to the blog yet.
        <% end %>
      </div>  
    </div>
    
  </div>
</div>
    
<% end %>
