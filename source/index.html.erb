<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<%= javascript_include_tag"jquery.easing.min.js", "jquery.scrollstop.js", "jquery.scrollsnap.hacked.js" %>

<script type="text/javascript">
  $(document).ready(function() {
    $('.scrolling').scrollsnap({
        direction: 'x',
        snaps: '.scrolling-wrapper li',
        proximity: 1000,
        latency: 200,
        duration: 500,
        easing: 'easeInOutCirc'
    });
    $('#next').on('click', function() {
      $('.scrolling').trigger('next');
    });
    $('#prev').on('click', function() {
      $('.scrolling').trigger('prev');
    });
    $('.scrolling').on('scrollstart', function() {
      $('.casestudies a').removeClass('current');
      $('.overlay').removeClass('current');
    });
    $('.scrolling-wrapper li').on('scrollstopped', function() {
      console.log('stopped');
      $('.casestudies a').removeClass('current');
      menuSelector = this.dataset.menu;
      $(menuSelector).addClass('current');
      $('.overlay').removeClass('current');
      overlaySelector = this.dataset.overlay;
      $(overlaySelector).addClass('current');
    });

  });
    
</script>

<style>  
  #carousel {
    width: 100%;
    min-width: 960px;
    height: 480px;
    
    position: relative;  
  }

  #carousel .scrolling {
    position: relative;
    width: 100%;
    height: 480px;
    
    overflow-x: scroll;
    overflow-y: hidden;
    -webkit-overflow-scrolling: touch;
    white-space: nowrap;
  }
  
  .scrolling-wrapper {
    list-style-type: none;
    display: table;
    margin: 0;
    padding: 0;
    width: 100%;
  }

  .slide {
    position: inherit;
    margin: 0;
    padding: 0;
    width: 100%;
    height: 480px;
    
    display: inline-block;
    z-index: 0;
  }
    
  #overlay-background {
    height: 380px; /* + padding-top */
    width: 100%;
    padding-top: 100px;
    padding-left: 10px;
    padding-right: 60%;
    
    position: absolute;
    top: 0;
    left: 0;
    z-index: 5;
    
    pointer-events: none;
    
    /* thanks http://www.colorzilla.com/gradient-editor/ */
    background: -moz-linear-gradient(left,  rgba(0,0,0,0.6) 0%, rgba(4,4,4,0.6) 25%, rgba(5,5,5,0) 35%, rgba(14,14,14,0) 100%);
    background: -webkit-gradient(linear, left top, right top, color-stop(0%,rgba(0,0,0,0.6)), color-stop(25%,rgba(4,4,4,0.6)), color-stop(35%,rgba(5,5,5,0)), color-stop(100%,rgba(14,14,14,0)));
    background: -webkit-linear-gradient(left,  rgba(0,0,0,0.6) 0%,rgba(4,4,4,0.6) 25%,rgba(5,5,5,0) 35%,rgba(14,14,14,0) 100%);
    background: -o-linear-gradient(left,  rgba(0,0,0,0.6) 0%,rgba(4,4,4,0.6) 25%,rgba(5,5,5,0) 35%,rgba(14,14,14,0) 100%);
    background: -ms-linear-gradient(left,  rgba(0,0,0,0.6) 0%,rgba(4,4,4,0.6) 25%,rgba(5,5,5,0) 35%,rgba(14,14,14,0) 100%);
    background: linear-gradient(to right,  rgba(0,0,0,0.6) 0%,rgba(4,4,4,0.6) 25%,rgba(5,5,5,0) 35%,rgba(14,14,14,0) 100%);
    filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#99000000', endColorstr='#000e0e0e',GradientType=1 );
  }
  .overlay-background .pale {
    position: relative;
  }
  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    height: 300px;
    
    opacity: 0;
    -webkit-transition: opacity 0.5s ease-in-out;
    -moz-transition: opacity 0.5s ease-in-out;
    transition: opacity 0.5s ease-in-out;
  }
  .overlay.current {
    opacity: 1;
    -webkit-transition: opacity 0.25s ease-in-out;
    -moz-transition: opacity 0.25s ease-in-out;
    transition: opacity 0.25s ease-in-out;
  }
  
  #prev, #next {
    height: 480px;
    width: 80px;

    position: absolute;
    top: 75px;
    z-index: 10;

    line-height: 240px;

    text-align: center;
    font-weight: bold;
    
    cursor: pointer;
  }
  #prev {
    left: 0;
  }
  #prev:before {
    display: block;
    height: 40px;
    width: 40px;
    content: ' ';
    @include icon-sprite(0 -40px);
  }
  #next {
    right: 0;
  }
  #next:before {
    display: block;
    height: 40px;
    width: 40px;
    content: ' ';
    @include icon-sprite(-40px -40px);
  }

</style>

