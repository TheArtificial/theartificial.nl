				<div class="padded">
					<%= artifact_icon "ExperienceJourney" %>
					<p>Experience Journey</p>
				</div>
			</div>
			<div class="col-2">
				<div class="padded">
					<%= artifact_icon "InteractionModel" %>
					<p>Interaction Model</p>
				</div>
			</div>
			<div class="col-2">
				<div class="padded">
					<%= artifact_icon "InteractionArchitecture" %>
