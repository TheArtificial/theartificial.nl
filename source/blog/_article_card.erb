<%
  last_slash = article.path.rindex('/')
  base_path = article.path[0...last_slash]
%>
<% link_to article do %>
<div class="col-4 packed">

  <% if article.data.masthead %>
    <div class="card blog-preview <%= article.data.category %>">
      <div class="masthead">
        <%= image_tag base_path + '/' + article.data.masthead %>
      </div>
      <div class="meta">
        <div class="label"><%= article.data.category %></div>
        <div class="small-title"><%= article.title %></div>
        <div class="author"><%= person_name article.data.author %></div>
        <div class="date"><%= article.date.strftime('%B %e, %Y') %></div>
      </div>
    </div>
  <% else %>
    <div class="card blog-preview no-image <%= article.data.category %>">
      <div class="meta">
        <div class="label"><%= article.data.category %></div>
        <div class="small-title"><%= article.title %></div>
        <div class="author"><%= person_name article.data.author %></div>
        <div class="date"><%= article.date.strftime('%B %e, %Y') %></div>
      </div>
      <div class="summary">
        <%= proper_blog_summary(article, 180) %>
      </div>
    </div>
  <% end %>
</div>
<% end %>
