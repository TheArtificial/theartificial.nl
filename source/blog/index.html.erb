---
pageable: true
per_page: 10
---

<div id="blog">
  <div class="pale">

<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<dl>
<% page_articles.each_with_index do |article, i| %>
  <dt><%= link_to article.title, article %> <span><%= article.date.strftime('%B %e, 0%Y') %></span></dt>
  <dd>
    <%= article.summary(250, '&#8230;') %>
  </dd>
<% end %>
</dl>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>
    
  </div>
</div>
