<%
article_view = {
  url: article.url,
  category: article.data.category,
  title: article.title,
  author: person_name(article.data.author),
  date: article.date.strftime('%B %e, %Y'),
  summary: simple_format(strip_tags(article.summary(180)))
}

if image_url = blog_preview_url(article)
  article_view[:image] = image_url
  template_path = 'feed/_article_card_image.mustache'
else
  template_path = 'feed/_article_card.mustache'
end
%>
<%= mustache(template_path, article_view) %>
